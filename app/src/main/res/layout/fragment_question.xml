<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".QuestionActivity"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="10dp"
    android:id="@+id/questionField"
    android:layout_weight="5">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_weight="3"
        android:id="@+id/question">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/imageView10"
            android:src="@drawable/item_background" />

        <TextView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/questionmark_circle"
            android:text="\?"
            android:layout_gravity="left|top"
            android:background="@drawable/circle_question_green"
            android:gravity="center"
            android:layout_margin="10dp"
            android:textColor="#FFFFFFFF" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wie viele Schindeln hat das Goldene Dachl?"
            android:id="@+id/text_question"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:layout_margin="10dp"
            android:gravity="center" />
    </FrameLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/answerRow1"
        android:baselineAligned="false">

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/item_background"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:id="@+id/answer1"
            android:onClick="evaluateAnswer">

            <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:text="A"
                android:layout_gravity="left|top"
                android:background="@drawable/circle_answer_a"
                android:gravity="center"
                android:layout_margin="10dp"
                android:textColor="#FFFFFFFF"
                android:autoText="false"
                android:id="@+id/a_circle" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:id="@+id/text_answerA"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="16dp" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/img_cross1"
                android:layout_gravity="center"
                android:visibility="invisible"
                android:background="@drawable/cross" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/item_background"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:id="@+id/answer2"
            android:onClick="evaluateAnswer">

            <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:text="B"
                android:layout_gravity="left|top"
                android:background="@drawable/circle_answer_b"
                android:gravity="center"
                android:layout_margin="10dp"
                android:textColor="#FFFFFFFF"
                android:id="@+id/b_circle" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:id="@+id/text_answerB"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="16dp" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/img_cross2"
                android:layout_gravity="center"
                android:visibility="invisible"
                android:background="@drawable/cross" />

        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/answerRow2"
        android:baselineAligned="false">

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/item_background"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:id="@+id/answer3"
            android:onClick="evaluateAnswer">

            <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:text="C"
                android:layout_gravity="left|top"
                android:background="@drawable/circle_answer_c"
                android:gravity="center"
                android:layout_margin="10dp"
                android:textColor="#FFFFFFFF"
                android:id="@+id/c_circle" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100 Mio"
                android:id="@+id/text_answerC"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="16dp" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/img_cross3"
                android:layout_gravity="center"
                android:visibility="invisible"
                android:background="@drawable/cross" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/item_background"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:id="@+id/answer4"
            android:onClick="evaluateAnswer">

            <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:text="D"
                android:layout_gravity="left|top"
                android:background="@drawable/circle_answer_d"
                android:gravity="center"
                android:layout_margin="10dp"
                android:textColor="#FFFFFFFF"
                android:id="@+id/d_circle" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0,3"
                android:id="@+id/text_answerD"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="16dp" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/img_cross4"
                android:layout_gravity="center"
                android:visibility="invisible"
                android:background="@drawable/cross" />

        </FrameLayout>

    </LinearLayout>

</LinearLayout>